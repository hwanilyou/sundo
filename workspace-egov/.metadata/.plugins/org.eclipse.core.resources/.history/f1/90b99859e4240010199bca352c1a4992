<%@ page contentType="text/html;charset=UTF-8" language="java" %>
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>환경물관리 지도</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- OpenLayers + proj4 -->
    <script src="https://cdn.jsdelivr.net/npm/ol@latest/dist/ol.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/ol@latest/ol.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/proj4js/2.8.0/proj4.js"></script>

    <style>
        #map { width: 100%; height: 600px; border: 1px solid #ccc; margin-top: 20px; }
    </style>
</head>
<body>
<div class="container">
    <h1 class="my-4 text-center">환경물관리 통합 지도</h1>
    <div class="card">
        <div class="card-body">
            <div id="map"></div>
        </div>
    </div>
</div>

<script>
    // EPSG:5179 좌표계 정의 (TM 중부 원점)
    proj4.defs("EPSG:5179", "+proj=tmerc +lat_0=38 +lon_0=127.5 +k=1 +x_0=200000 +y_0=500000 +ellps=GRS80 +units=m +no_defs");
    ol.proj.proj4.register(proj4);

    const projection = ol.proj.get('EPSG:5179');
    projection.setExtent([90112, 1192896, 1990673, 2761664]); // 대략적인 범위 설정

    const map = new ol.Map({
        target: 'map',
        layers: [
            new ol.layer.Tile({
                source: new ol.source.TileWMS({
                    url: 'http://localhost:8282/geoserver/sundo3/wms',
                    params: {
                        'LAYERS': 'sundo3:water_test01',
                        'TILED': true,
                        'SRS': 'EPSG:5179',
                        'TRANSPARENT': true
                    },
                    serverType: 'geoserver'
                })
            })
        ],
        view: new ol.View({
            projection: projection,
            center: [953148, 1950000], // EPSG:5179 기준 중심 좌표
            zoom: 7
        })
    });
</script>
</body>
</html>
