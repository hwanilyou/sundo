        <div class="card-body">
            <div id="map"></div>
        </div>
    </div>
</div>

<script>
    const map = new ol.Map({
        target: 'map',
        layers: [
            new ol.layer.Tile({
                source: new ol.source.TileWMS({
                    url: 'http://localhost:8282/geoserver/sundo3/wms',
                    params: {
                        'LAYERS': 'sundo3:water_test01',
                        'TILED': true
                    },
                    serverType: 'geoserver'
                })
            })
        ],
        view: new ol.View({
            center: ol.proj.fromLonLat([127.7669, 35.9078]),
            zoom: 7
        })
    });
</script>
</body>
