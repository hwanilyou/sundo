<body>
    <h2>í™˜ê²½ ì§€ë„ (GeoServer ë ˆì´ì–´: eco_map_seoul + test1)</h2>
    <div id="map"></div>

    <script>
        // âœ… EPSG:5179 ì¢Œí‘œê³„ ì •ì˜
        proj4.defs("EPSG:5179", "+proj=tmerc +lat_0=38 +lon_0=127 +k=1 +x_0=200000 +y_0=500000 +ellps=GRS80 +units=m +no_defs");
        ol.proj.proj4.register(proj4);

        // âœ… ì§€ë„ ìƒì„±
        const map = new ol.Map({
            target: 'map',
            layers: [
                // ğŸŸ¢ ë°°ê²½ ì§€ë„ (OSM)
                new ol.layer.Tile({
                    source: new ol.source.OSM()
                }),
                // ğŸŸ  GeoServer WMS eco_map_seoul ë ˆì´ì–´
                new ol.layer.Image({
                    source: new ol.source.ImageWMS({
                        url: 'http://localhost:8282/geoserver/map/wms',
                        params: {
                            'LAYERS': 'map:eco_map_seoul',
                            'TILED': true
                        },
                        ratio: 1,
                        serverType: 'geoserver'
                    }),
                    opacity: 0.7 // ğŸ”¥ íˆ¬ëª…ë„ ì¡°ì ˆ
                })
            ],
            view: new ol.View({
                projection: 'EPSG:5179',          // âœ… ì¢Œí‘œê³„ ê¼­ ë§ì¶°ì•¼ í•¨
                center: [200000, 500000],         // âœ… ëŒ€í•œë¯¼êµ­ ì¤‘ì•™ (ì¤‘ë¶€ì›ì  ê¸°ì¤€)
                zoom: 7                           // ğŸ” ì¤Œë ˆë²¨
            })
        });

        // ğŸŸ¡ test1 ë ˆì´ì–´ ì¶”ê°€
        const test1Layer = new ol.layer.Image({
            source: new ol.source.ImageWMS({
                url: 'http://localhost:8282/geoserver/project/wms',
                params: {
                    'LAYERS': 'project:test1',
                    'TILED': true,
                    'SRS': 'EPSG:5179'           // âœ… ì—¬ê¸° 5179ë¡œ í†µì¼ (í•„ìš” ì‹œ 5186ìœ¼ë¡œ ë§ì¶”ì„¸ìš”)
                },
                ratio: 1,
                serverType: 'geoserver',
                crossOrigin: 'anonymous'
            }),
            visible: true,
            opacity: 0.8 // âœ… test1 ë ˆì´ì–´ë„ ì•½ê°„ íˆ¬ëª…í•˜ê²Œ
        });

        // âœ… mapì— test1 ë ˆì´ì–´ ì¶”ê°€
        map.addLayer(test1Layer);

        // âœ… ë§ˆìš°ìŠ¤ ì¢Œí‘œ ë³´ê¸°
        map.on('pointermove', function (evt) {
            const coord = ol.proj.toLonLat(evt.coordinate, 'EPSG:5179');
            console.log('ì¢Œí‘œ:', coord);
        });
    </script>
